extends template.pug 
  
block content
  div 
    if doggo
      div 
        div 
          img(src="#{doggo.imgSrc}", alt="dog photo")
          p #{doggo.price}
          img(src="#{doggo.gender}", alt="gender")
        div 
          div
            h2 #{doggo.name}
            p #{doggo.age}
          p #{doggo.breed}
      form(action="/matches/liked", method="post")
        input(type="hidden", name="userId", value=doggo.userId)
        button(type="submit") 
          img(src="images/bone.png", alt="image of a bone" height="150px")
      form(action="/matches/disliked", method="post")
        input(type="hidden", name="userId", value=doggo.userId)
        button(type="submit") weg ermee

    else 
      h2 There are currently no doggos that match your preferences..